@{
    string tabcollabel = "col-md-3";
    string tabcolinput = "col-md-9";
}

@*for New Source Create*@
<div class="row bg-danger-light border" id="divPaymentType" style="display:none">
    <div class="@tabcollabel">
        <label for="txtSavePaymentType">Add Payment</label>

    </div>
    <div class="@tabcolinput">

        <div class="input-group">
            <input class="form-control" id="txtSavePaymentType" placeholder="Enter Payment Type " />
            <button type="button" data-request-url='@Url.Action("Create_PaymentType_With_Ajax","PaymentType")' class="btn btn-sm btn-whatsapp" id="btnSavePaymentType">Add <span><i class="mdi mdi-plus"></i></span></button>
        </div>
    </div>
</div>