@inject IHttpContextAccessor Accessor

@{
    string message = "";
    string status = "danger";
    if (Accessor.HttpContext.Session.GetString("message") != null)
    {
        message = Accessor.HttpContext.Session.GetString("message") as string;
        Accessor.HttpContext.Session.Remove("message");
    }
    if (Accessor.HttpContext.Session.GetString("status") != null)
    {
        status = Accessor.HttpContext.Session.GetString("status") as string;
        Accessor.HttpContext.Session.Remove("status");
    }
}


@if (message != "")
    {
        <div class="row py-3">
            <div class="col-sm-12">

                <div class="alert alert-@status alert-dismissible fade show" role="alert" style="font-size:16px">

                    @{ string greet = "";
                        string text_color = "";

                        @if (status.ToLower() == "success".ToLower())
                        {
                            greet = "Thank You";
                            text_color = "text-green";
                        }
                        else
                        {

                            greet = "Caution!";
                            text_color = "text-red";
                        }
                     <strong>@greet</strong> <span class="@text_color">@message.</span>

                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

                    }

                </div>
                @*<div class="alert alert-@status" role="alert">
                    <h4>@message</h4>
                </div>*@



            </div>
        </div>
    }

