@model MeasureCreateViewModel

@{
    ViewBag.Title = "Create Measure";
 

}

<form method="post" asp-controller="Measure" asp-action="Create">
    <div class="card  m-auto" id="brandList">
        <div class="card-header bg-secondary">
            <h3 class="card-title text-white">Category Brand</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-danger text-xxl-left" asp-validation-summary="All"></div>
                </div>
            </div> @*end row div section*@

            <partial name="_Messages" />

            <div class="row">
                <div class="col-md-2">


                    <label asp-for="@Model.Measurements"></label>
                </div>
                <div class="col-md-10">


                    <input asp-for="@Model.Measurements" class="form-control">
                    <span class="text-danger" asp-validation-for="@Model.Measurements"></span>

                </div>




            </div>
        </div>

        <div class="card-footer">
            <div class="form-group">
                <button class="btn btn-whatsapp btn-xs">Create <span class="btn-icon-right"> <i class="mdi mdi-plus"></i></span></button>
                <a asp-controller="Measure" asp-action="MeasureList" class="pull-right btn btn-linkedin btn-xs">Go To List <span class="btn-icon-right"><i class="mdi mdi-view-list"></i></span></a>

            </div>

        </div>
    </div>

</form>

