@model VendorEditViewModel

@{
    ViewBag.Title = "Edit Vendor";
}



<form method="post" asp-controller="Vendor" asp-action="Edit">

    <div class="card">
        <div class="card-header bg-blue-dark">
            <h4 class="card-title text-white">Edit Vendor</h4>
        </div>
        <div class="card-body">
            @*Multiple Error Show*@
            <div class="row">
                <div class="col-md-12">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>

            
            <partial name="_Messages" />

            <div class="row my-2">
                <div class="col-md-10">
                    <input hidden asp-for="@Model.VendorId " class="form-control" />
                    <span class="text-danger" asp-validation-for="@Model.VendorId "></span>
                </div>
            </div>

            <div class="row my-2">
                <div class="col-md-2">
                    <label asp-for="@Model.VendorName" class="col-form-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="@Model.VendorName" class="form-control" />
                    <span class="text-danger" asp-validation-for="@Model.VendorName"></span>
                </div>
            </div>

            @*Address Section*@
            <div class="row mb-2">
                <div class="col-md-2">
                    <label asp-for="@Model.Address" class="col-form-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="@Model.Address" class="form-control" />
                </div>
            </div>

            @*Contact Section*@
            <div class="row mb-2">
                <div class="col-md-2">
                    <label asp-for="@Model.Contact" class="col-form-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="@Model.Contact" class="form-control" />
                    <label class="mt-1">
                        <input class="form-check-inline" type="checkbox" asp-for="@Model.IsSelected" />Default
                    </label>
                </div>
            </div>

        </div>
        <div class="card-footer">

            <div class="row mt-3">
                <div class="col-md-12">
                    <button asp-controller="Vendor" asp-action="Edit" class="col-md-3 btn btn-sm btn-success"><span>Update <i class="mdi mdi-plus"></i></span></button>
                    <a asp-controller="Vendor" asp-action="VendorList" class="pull-right col-md-3 btn btn-sm btn-info"><span>Goto Vendor List <i class="mdi mdi-view-list"></i></span></a>
                </div>
            </div>
        </div>
    </div>

</form>