@model VendorCreateViewModel


@{ 
    ViewBag.Title = "Create Vendor";
}

<form method="post" asp-controller="Vendor" asp-action="Create">

    <div class="card">
        <div class="card-header bg-blue-dark">
            <h4 class="card-title text-white">New Vendor</h4>
        </div>
        <div class="card-body">
            <partial name="_Messages" />


            <div class="row my-2">
                <div class="col-md-2">
                    <label asp-for="@Model.VendorName" class="col-form-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="@Model.VendorName" class="form-control" />
                    <span class="text-danger" asp-validation-for="@Model.VendorName"></span>
                </div>
            </div>

            @*Address Section*@
            <div class="row mb-2">
                <div class="col-md-2">
                    <label asp-for="@Model.Address" class="col-form-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="@Model.Address" class="form-control" />
                </div>
            </div>

            @*Contact Section*@
            <div class="row mb-2">
                <div class="col-md-2">
                    <label asp-for="@Model.Contact" class="col-form-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="@Model.Contact" class="form-control" />
                    <label class="mt-1">
                        <input class="form-check-inline" type="checkbox" asp-for="@Model.IsSelected" />Default
                    </label>
                </div>
            </div>

        </div>
        <div class="card-footer">

            <div class="row mt-3">
                <div class="col-md-12">
                    <button asp-controller="Vendor" asp-action="Create" class="col-md-3 btn btn-sm btn-success"><span>Create <i class="mdi mdi-plus"></i></span></button>
                    <a asp-controller="Vendor" asp-action="VendorList" class="pull-right col-md-3 btn btn-sm btn-info"><span>Goto Vendor List <i class="mdi mdi-view-list"></i></span></a>
                </div>
            </div>
        </div>
    </div>

</form>