@model List<SizeListViewModel>

@{
    ViewBag.Title = "Size List";
}

<div class="card">
    <div class="card-header bg-warning">
        <h2 class="card-title text-white">Sources List</h2>
    </div>
    <div class="card-body">
        <partial name="_Messages" />

        <div class="row my-2">
            <div class="col-sm-12">
                <a asp-controller="Size" asp-action="Create" class="col-sm-3 col-md-2 btn pull-right btn-outline-info btn-sm"><span>Create <i class="mdi mdi-plus"></i></span></a>
            </div>
        </div>
        @if (Model != null && Model.Count > 0)
        {
            int sl = 1;
            <div class="row font-weight-bolder border py-2 bg-success">
                <div class="col-sm-3"><h4>SL No</h4></div>
                <div class="col-sm-4"><h4>Size</h4></div>
                <div class="col-sm-5"><h4>Action</h4></div>
            </div>
            foreach (var _model in Model)
            {
    <div class="row border py-2 border-bottom">
        <div class="col-sm-2">@sl</div>
        <div class="col-sm-3">@_model.SizeName</div>
        <div class="col-sm-3">@_model.sizeType</div>

        <div class="col-sm-4">

            <div class="row">
                <div class="col-md-6">
                    <a asp-controller="Size" asp-action="Edit" asp-route-id="@_model.SizeId" class="btn btn-block btn-sm btn-outline-secondary"><span>Edit <i class="mdi mdi-account-edit"></i></span></a>
                </div>
                <div class="col-md-6">

                    <button type="button" id="deleteSizeButton@_model.SizeId" onclick="showButton(@_model.SizeId)" class="btn btn-block btn-sm btn-outline-danger"><span>Delete <i class="mdi mdi-delete"></i></span></button>
                </div>

            </div>

            @*Yes No button show Bind with javascript*@
            <div class="row mt-3" id="showDeleteSizeDiv@_model.SizeId" style="display:none">
                <div class="col-sm-12">
                    <h4>Do You Want To Delete <strong>'@_model.SizeName'</strong></h4>

                    <div class="row">
                        <div class="col-sm-6 mb-1 mb-md-0">
                            <form method="post" asp-controller="Size" asp-action="Delete" asp-route-id="@_model.SizeId">
                                <button type="submit" class="btn-block btn btn-sm btn-danger"><span>Yes <i class="mdi mdi-delete"></i></span></button>
                            </form>
                        </div>

                        <div class="col-sm-6">
                            <button type="button" id="cancelDeleteSource@_model.SizeId" onclick="CancelDelete(@_model.SizeId)" class="btn-block btn btn-sm btn-info"><span>No <i class="mdi mdi-arrow-left-bold"></i></span></button>
                         </div>
                    </div>
                </div>
            </div>




        </div>
    </div>
                sl = sl + 1;
            }

        }
        else
        {
            <div class="row">
                <div class="col-sm-12">
                    <h4 class="card-title">No Size Is Available</h4>
                </div>
            </div>
        }

    </div>
    <div class="card-footer">

    </div>
</div>



@section Scripts
{
    <script>
    function showButton(id)
    {
        $("#showDeleteSizeDiv" + id).css("display", "block");
        $("#deleteSizeButton" + id).prop("disabled", true);
        }

        function CancelDelete(id) {
            $("#showDeleteSizeDiv" + id).css("display", "none");
            $("#deleteSizeButton" + id).prop("disabled", false);
        }
    </script>)

}