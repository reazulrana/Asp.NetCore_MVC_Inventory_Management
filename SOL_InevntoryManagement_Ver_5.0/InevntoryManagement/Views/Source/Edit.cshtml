@model SourceEditViewModel


@{
    ViewBag.Title = "Edit Source";
}
<form method="post" asp-controller="Source" asp-action="Edit">
    <div class="card">
        <div class="card-header bg-warning-light">
            <h2 class="card-title text-yellow">Create Sources</h2>
        </div>
        <div class="card-body">
            <partial name="_Messages" />
            <div class="row">
                <div class="col-sm-12">
                    <button type="submit"  class="btn pull-right btn-outline-info btn-sm"><span>Go to List <i class="mdi mdi-view-list"></i></span></button>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <input hidden class="form-control" asp-for="@Model.Id" />

                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="form-group">
                        <label asp-for="@Model.SourceName"></label>
                        <input class="form-control" asp-for="@Model.SourceName" />
                        <span asp-validation-for="@Model.SourceName" class="text-danger"></span>
                    </div>
                </div>
            </div>

        </div>
        <div class="card-footer">
            <div class="form-group">
                <button type="submit" asp-controller="Source" asp-action="Update" class="btn btn-outline-success btn-sm"><span class="mdi mdi-48px">Update <i class="mdi mdi-update"></i></span></button>
             </div>
        </div>
    </div>
</form>

